<html>
<head>
    <title>Courses</title>
</head>
<body>
    <h1>List of Courses</h1>

    {% if courses is not empty %}
        <p>Here are all your courses:</p>
        <ul>
            {% for course in courses %}
                <li><a href="/courses/{{ course.getId }}">{{ course.getName }}</a></li>
            {% endfor %}
        </ul>
    {% endif %}

    <form action='/courses' method='post'>
        <label for='name'>Course Name</label>
        <input id='name' name='name' type='text'>
        <label for='start'>Course Start Time</label>
        <input id='start' name='start' type='time'>

        <button type='submit'>Add Course</button>
    </form>
    <form action='/delete_courses' method='post'>
        <button type='submit'>Clear</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
